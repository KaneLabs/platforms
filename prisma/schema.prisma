// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_SHADOW") // used for migrations
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(cuid())
  name          String?
  // if you are using Github OAuth, you can get rid of the username attribute (that is for Twitter OAuth)
  username      String?
  gh_username   String?
  eth_address   String?
  ens_name      String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  userRoles     UserRole[]
  tickets       Ticket[] // Add this line
  formResponse  FormResponse[]
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  refresh_token_expires_in Int?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  oauth_token_secret       String?
  oauth_token              String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Post {
  id             String        @id @default(cuid())
  title          String?       @db.Text
  description    String?       @db.Text
  content        String?       @db.Text
  slug           String        @default(cuid())
  image          String?       @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash  String?       @default("data:image/png;base64,") @db.Text
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  published      Boolean       @default(false)
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  organizationId String?
  user           User?         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId         String?

  @@unique([slug, organizationId])
  @@index([organizationId])
  @@index([userId])
}

model Organization {
  id          String  @id @default(cuid())
  name        String?
  title       String? @db.Text
  header      String? @db.Text
  description String? @db.Text

  logo             String?            @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/JRajRyC-PhBHEinQkupt02jqfKacBVHLWJq7Iy.png") @db.Text
  font             String             @default("font-cal")
  image            String?            @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash    String?            @default("data:image/png;base64,") @db.Text
  imageAspectRatio String?            @default("16/9")
  subdomain        String?            @unique
  customDomain     String?            @unique
  message404       String?            @default("Blimey! You've found a page that doesn't exist.") @db.Text
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  posts            Post[]
  events           Event[]
  roles            OrganizationRole[] // Add this line
  apiKeys          ApiKey[]
  form             Form[]
}

model Event {
  id             String       @id @default(cuid())
  name           String
  path           String
  description    String?      @db.Text
  image          String?      @db.Text
  imageBlurhash  String?      @db.Text
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  startingAt     DateTime?
  endingAt       DateTime?
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  organizationId String
  eventRole      EventRole[]
  ticketTier     TicketTier[]
  ticket         Ticket[]
  form           Form[]
}

model OrganizationRole {
  roleId         String
  organizationId String
  role           Role         @relation(fields: [roleId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@id([roleId, organizationId])
}

model EventRole {
  roleId  String
  eventId String
  role    Role   @relation(fields: [roleId], references: [id])
  event   Event  @relation(fields: [eventId], references: [id])

  @@id([roleId, eventId])
}

model Role {
  id           String  @id @default(cuid())
  name         String
  description  String?
  image        String?
  requiresForm Boolean @default(false) // Add this line

  userRoles        UserRole[]
  rolePermissions  RolePermission[]
  organizationRole OrganizationRole[]
  eventRole        EventRole[]
  ticketTier       TicketTier[]
  formId           String?
  form             Form?              @relation(fields: [formId], references: [id])
}

model RolePermission {
  roleId       String
  permissionId String
  role         Role       @relation(fields: [roleId], references: [id])
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

model Permission {
  id              String           @id @default(cuid())
  name            String
  description     String?
  rolePermissions RolePermission[]
}

model UserRole {
  id     String @id @default(cuid())
  userId String
  roleId String
  user   User   @relation(fields: [userId], references: [id])
  role   Role   @relation(fields: [roleId], references: [id])

  @@unique([userId, roleId])
}

model ApiKey {
  id             String       @id @default(cuid())
  key            String       @unique
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
}

model Ticket {
  id      String @id @default(cuid())
  userId  String
  tierId  String
  eventId String
  roleId  String

  validFrom DateTime
  validTo   DateTime
  user      User       @relation(fields: [userId], references: [id])
  tier      TicketTier @relation(fields: [tierId], references: [id])
  event     Event      @relation(fields: [eventId], references: [id])

  @@unique([userId, tierId])
}

model TicketTier {
  id          String   @id @default(cuid())
  name        String
  description String?
  eventId     String
  roleId      String
  issued      Int      @default(0)
  quantity    Int
  price       Int // Price of the ticket in smallest unit of currency
  currency    String // Currency of the price
  tickets     Ticket[]
  event       Event    @relation(fields: [eventId], references: [id])
  role        Role     @relation(fields: [roleId], references: [id])
  formId      String?
  form        Form?    @relation(fields: [formId], references: [id])

  @@index([eventId])
}

model Form {
  id                String         @id @default(cuid())
  name              String         @default("My Form")
  published         Boolean        @default(false)
  // You are applying for this role, at this event, for this time span.
  organization      Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  organizationId    String
  event             Event?         @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  eventId           String?
  image             String?
  endingTitle       String?        @default("Thank you for your submission!")
  endingDescription String?        @default("We have received your response and will process it shortly.")
  questions         Question[]
  formResponse      FormResponse[]
  role              Role[]
  ticketTier        TicketTier[]
}

model Question {
  id          String       @id @default(cuid())
  type        QuestionType // 'text', 'dropdown', 'multi-select', etc.
  text        String
  description String?
  required    Boolean      @default(false)
  fromDate    DateTime?
  toDate      DateTime?
  min         Int?
  max         Int?
  variants    Json? // JSON for storing options
  formId      String
  form        Form         @relation(fields: [formId], references: [id])
  answers     Answer[]
  order       Int
}

enum QuestionType {
  SHORT_TEXT
  LONG_TEXT
  SELECT
  MULTI_SELECT
  DROPDOWN
  DATE
  DATE_RANGE
  BOOLEAN
}

model Answer {
  id         String        @id @default(cuid())
  value      Json // JSON for storing the answer value
  questionId String
  question   Question      @relation(fields: [questionId], references: [id])
  answers    FormResponse? @relation(fields: [answersId], references: [id])
  answersId  String?
}

model FormResponse {
  id        String   @id @default(cuid())
  userId    String
  formId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  form      Form     @relation(fields: [formId], references: [id])
  answers   Answer[]

  @@unique([userId, formId])
}
